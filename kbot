#!/usr/bin/env python3
import grab
import sys

USAGE = '''
kbot GAMEID 
kbot GAMEID (GAMEPIN) (USERNAME)
'''
EMAIL = "XXXX@gmail.com"
PASSWORD = "XXXX"
name = "jimmy"
COLOR1 = "\033[1;37m" #questions
COLOR2 = "\033[0m" #lines
COLOR3 = "\033[0;34m" #answers
if sys.platform == 'win32':
    COLOR1, COLOR2, COLOR3 = "","",""
if len(sys.argv) == 4:
    name = sys.argv[3]

if len(sys.argv) >= 3:
    qanda, colors = grab.get_details(sys.argv[1],EMAIL,PASSWORD)
    print('{} answers received.'.format(len(colors)))
    grab.start_bot(sys.argv[2],name,colors)
elif len(sys.argv) == 2:
    grab.printAnswers(sys.argv[1],EMAIL,PASSWORD,COLOR1,COLOR2,COLOR3)
else:
    print(USAGE)
